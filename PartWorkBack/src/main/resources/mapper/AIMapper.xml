<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.campus.partworkback.mapper.AIMapper">
    <resultMap id="MatchTaskRM" type="org.campus.partworkback.DTO.MatchDTO">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="reason" column="description"/>
    </resultMap>
    <select id="getMatchTask" resultMap="MatchTaskRM">
        SELECT id, title, description FROM task 
                WHERE id IN
                <foreach collection="arr" item="id" open="(" separator="," close=")">
                    #{id}
                </foreach>
    </select>
</mapper>